# AWS IoT Core Configuration
# Replace with your actual AWS IoT Core endpoint
AWS_IOT_ENDPOINT=your-iot-endpoint.iot.us-east-1.amazonaws.com

# AWS IoT Core Certificate Paths
# Download these from AWS IoT Core console
AWS_IOT_CA_CERT_PATH=./certificates/AmazonRootCA1.pem
AWS_IOT_CERT_PATH=./certificates/device-certificate.pem.crt
AWS_IOT_PRIVATE_KEY_PATH=./certificates/private.pem.key

# AWS Region
AWS_REGION=us-east-1

# Backend API Configuration
# URL of your Flask backend API
BACKEND_URL=http://localhost:5000

# Authentication token for API requests (JWT token from Cognito)
API_AUTH_TOKEN=your-jwt-token-here

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=simulator.log

# Demo Mode (set to 'true' to run without AWS IoT Core)
DEMO_MODE=false

# Simulation Settings (optional overrides)
# TELEMETRY_INTERVAL=30
# NUM_FARMS=1
# DEVICES_PER_ROOM=4

# MQTT Client Settings
MQTT_CLIENT_ID_PREFIX=mushroom_sim
MQTT_KEEP_ALIVE=60
MQTT_QOS=1

# Device Simulation Settings
SIMULATION_SPEED=1.0  # 1.0 = real-time, 2.0 = 2x speed, 0.5 = half speed
ENABLE_SENSOR_DRIFT=true
ENABLE_RANDOM_FAILURES=false
FAILURE_PROBABILITY=0.01  # 1% chance of temporary device failure

# Data Generation Settings
USE_REALISTIC_PATTERNS=true  # Enable day/night cycles, seasonal variations
TIME_ACCELERATION=1  # 1 = real-time, 24 = 1 hour = 1 day

# Notification Settings
ENABLE_ALERTS=true
ALERT_THRESHOLD_TEMPERATURE_HIGH=28.0
ALERT_THRESHOLD_TEMPERATURE_LOW=18.0
ALERT_THRESHOLD_HUMIDITY_HIGH=95.0
ALERT_THRESHOLD_HUMIDITY_LOW=75.0
ALERT_THRESHOLD_CO2_HIGH=2000

# Development Settings
DEBUG_MQTT_MESSAGES=false
SAVE_TELEMETRY_TO_FILE=false
TELEMETRY_FILE_PATH=./telemetry_data.json

# Performance Settings
MAX_CONCURRENT_PUBLISHES=10
MQTT_RECONNECT_DELAY=5
MAX_RETRY_ATTEMPTS=3

# Security Settings
ENABLE_TLS=true
VERIFY_SSL_CERTIFICATES=true

# Optional: Custom CA certificate for self-signed certificates
# CUSTOM_CA_CERT_PATH=./certs/custom-ca.pem

# Optional: Client certificate for mutual TLS authentication
# CLIENT_CERT_PATH=./certs/client-cert.pem
# CLIENT_KEY_PATH=./certs/client-key.pem