# Database Configuration
DATABASE_URL=sqlite:///mushroom_farm.db
DATABASE_TEST_URL=postgresql://username:password@localhost:5432/mushroom_farm_test_db

# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=True
SECRET_KEY=your-secret-key-here
JWT_SECRET_KEY=your-jwt-secret-key-here

# AWS Configuration
AWS_REGION=ap-southeast-1
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key

# AWS IoT Core
MQTT_BROKER=your-iot-endpoint.iot.ap-southeast-1.amazonaws.com
MQTT_PORT=8883
CA_PATH=certs/AmazonRootCA1.pem
CERT_PATH=certs/device-certificate.pem.crt
KEY_PATH=certs/device-private.pem.key

# AWS Cognito
COGNITO_USER_POOL_ID=your-user-pool-id
COGNITO_CLIENT_ID=your-client-id
COGNITO_CLIENT_SECRET=your-client-secret
COGNITO_REGION=ap-southeast-1

# AWS Bedrock
BEDROCK_MODEL_ID=anthropic.claude-3-sonnet-20240229-v1:0
BEDROCK_REGION=us-east-1

# Redis Configuration (for Celery)
REDIS_URL=redis://localhost:6379/0

# Internal API Security
INTERNAL_API_TOKEN=your-internal-api-token

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:19006

# Rate Limiting
RATELIMIT_STORAGE_URL=redis://localhost:6379/1